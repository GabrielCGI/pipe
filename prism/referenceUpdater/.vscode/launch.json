{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "debugpy",
            "request": "attach",
            "name": "Maya Python Debugger: Attach using Process Id",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Python Debugger: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ]
        },
        {
            "name": "Launch Prism2.0.18",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/ILLOGIC_APP/Prism/2.0.18/app/Python311/Prism.exe",
            "args": [
                "C:/ILLOGIC_APP/Prism/2.0.18/app/Scripts/PrismTray.py",
                "projectBrowser"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [
                {
                    "name": "PRISM_PLUGIN_SEARCH_PATHS", "value": "C:/ILLOGIC_APP/Prism/2.0.18/plugins"
                }, 
                {
                    "name": "PRISM_PLUGIN_PATHS", "value": "R:/devFred/code/plugins/prism/initSceneBuilder/Scripts"
                }
            ],
            "console": "externalTerminal"
        }
    ]
}